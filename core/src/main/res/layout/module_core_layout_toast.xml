<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/module_core_toast_alter_bg"
    android:gravity="center"
    android:minHeight="99dp"
    android:minWidth="99dp"
    android:orientation="vertical"
    android:padding="12dp">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/module_core_comment_send_clickable"
        app:maskColor="@color/_00000000_7a7b7c" />

    <TextView
        android:id="@+id/tv_toast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:gravity="center"
        android:textColor="@color/_ffffff_7a7b7d"
        android:textSize="14dp" />

</LinearLayout>