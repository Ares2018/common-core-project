<?xml version="1.0" encoding="UTF-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:minHeight="52dp">

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_gravity="bottom"
        android:gravity="center_horizontal">

        <ImageView
            android:id="@+id/iv_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/module_core_ic_refresh_map" />

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="13dp"
            android:layout_height="13dp"
            android:minHeight="13dp"
            android:layout_alignBottom="@id/iv_map"
            android:layout_alignRight="@id/iv_map"
            android:layout_marginRight="-6dp"
            android:src="@mipmap/module_core_ic_refresh_search" />

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="11dp"
            android:layout_toRightOf="@id/iv_map"
            android:text="正在刷新中"
            android:textColor="@color/tc_a5a5a5"
            android:textSize="@dimen/ts_11sp" />
    </RelativeLayout>
</FrameLayout>
