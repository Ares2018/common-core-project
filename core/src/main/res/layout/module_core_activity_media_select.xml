<?xml version="1.0" encoding="UTF-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.aliya.view.fitsys.FitWindowsFrameLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:fitsSystemWindows="true"
        android:minHeight="@dimen/toolbar_normal_height"
        app:fitType="top">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="42dp"
            android:layout_height="@dimen/toolbar_normal_height"
            android:background="?attr/actionBarItemBackground"
            android:paddingRight="7dp"
            android:scaleType="center"
            android:src="@mipmap/ic_top_bar_back_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="@dimen/toolbar_normal_height"
            android:layout_marginLeft="27dp"
            android:gravity="center_vertical"
            android:text="照片"
            android:textColor="@color/tc_ffffff"
            android:textSize="@dimen/ts_15sp" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/ToolbarTitle"
            android:text="所有照片"
            android:textColor="@color/tc_ffffff" />

        <TextView
            android:id="@+id/tv_complete"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/toolbar_normal_height"
            android:layout_gravity="right"
            android:background="?attr/selectableItemBackground"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="完成"
            android:textColor="@color/tc_ffffff"
            android:textSize="@dimen/ts_15sp" />
    </com.aliya.view.fitsys.FitWindowsFrameLayout>

    <com.aliya.view.fitsys.FitWindowsRecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/top_bar"
        android:background="@color/bc_ffffff"
        android:clipToPadding="true"
        app:fitType="bottom" />

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:visibility="gone">

        <com.zjrb.core.ui.widget.photoview.HackyViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>
</RelativeLayout>
