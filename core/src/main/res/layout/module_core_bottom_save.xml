<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bc_f5f5f5"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_save"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/bc_ffffff"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:text="@string/module_core_save_pic"
        android:textColor="@color/tc_484848"
        android:textSize="@dimen/ts_16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="14.5dp" />

    <TextView
        android:id="@+id/tv_cancel"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/bc_ffffff"
        android:foreground="?attr/selectableItemBackground"
        android:gravity="center"
        android:text="@string/module_core_save_cancel"
        android:textColor="@color/tc_484848"
        android:textSize="@dimen/ts_14sp" />
</LinearLayout>
