<?xml version="1.0" encoding="utf-8"?>
<com.aliya.view.fitsys.FitWindowsFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:id="@+id/layout_title_bar"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             android:background="@color/colorPrimary"
                                             android:fitsSystemWindows="true"
                                             android:minHeight="@dimen/toolbar_normal_height"
                                             app:fitType="top">

    <ImageView
        android:id="@+id/iv_top_bar_back"
        android:layout_width="42dp"
        android:layout_height="@dimen/toolbar_normal_height"
        android:background="?attr/actionBarItemBackground"
        android:paddingRight="7dp"
        android:scaleType="center"
        android:src="@mipmap/ic_top_bar_back_white"
        app:maskColor="@android:color/transparent"
        />

    <TextView
        android:id="@+id/tv_top_bar_title"
        style="@style/ToolbarTitle"
        android:layout_centerInParent="true"
        android:textColor="@color/_ffffff_7a7b7d"
        tools:text="自定义ToolBar"/>

    <TextView
        android:id="@+id/iv_top_jump"
        android:layout_width="42dp"
        android:layout_height="@dimen/toolbar_normal_height"
        android:layout_centerInParent="true"
        android:layout_gravity="right"
        android:gravity="center"
        android:textColor="@color/_ffffff_7a7b7d"
        tools:text="跳过"
        />

    <ImageView
        android:id="@+id/iv_top_share"
        android:layout_width="42dp"
        android:layout_height="@dimen/toolbar_normal_height"
        android:layout_gravity="right"
        android:scaleType="center"
        android:src="@mipmap/module_core_topbar_share"
        app:maskColor="@android:color/transparent"
        android:visibility="gone"
        />

</com.aliya.view.fitsys.FitWindowsFrameLayout>