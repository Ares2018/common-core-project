<?xml version="1.0" encoding="UTF-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bc_f8f8f8"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bc_f8f8f8"
        android:paddingBottom="27dp"
        android:paddingTop="27dp">

        <LinearLayout
            android:id="@+id/ll_module_core_more_collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="42dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_module_core_more_collect"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/module_core_collect" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6.5dp"
                android:gravity="center"
                android:maxLines="1"
                android:text="收藏"
                android:textColor="@color/tc_484848"
                android:textSize="@dimen/ts_11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_module_core_more_night"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_module_core_more_theme"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/module_core_ic_theme" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6.5dp"
                android:gravity="center"
                android:maxLines="1"
                android:text="夜间模式"
                android:textColor="@color/tc_484848"
                android:textSize="@dimen/ts_11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_module_core_more_feed_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="42dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_module_core_more_feed_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/module_core_ic_feed_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6.5dp"
                android:gravity="center"
                android:maxLines="1"
                android:text="反馈问题"
                android:textColor="@color/tc_484848"
                android:textSize="@dimen/ts_11sp" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="12.5dp"
        android:layout_marginRight="12.5dp"
        android:background="@color/dc_d8d8d8" />

    <include
        android:id="@+id/ly_share"
        layout="@layout/module_core_dialog_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
